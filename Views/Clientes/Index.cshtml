@model IEnumerable<SpaAdmin.Models.Cliente>
@{
    ViewData["Title"] = "Listado de Clientes";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-users"></i> Clientes</h4>
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Nuevo Cliente
                    </a>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center mb-0">
                            No hay clientes registrados.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <!--<th>Id</th>-->
                                        <th>Nombre Completo</th>
                                        <th>Email</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cliente in Model)
                                    {
                                        <tr>
                                            <!--<td>@cliente.Id</td>-->
                                            <td>@($"{cliente.FirstName} {cliente.LastName}")</td>
                                            <td>@cliente.Email</td>
                                            <td class="text-end">
                                                <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-info btn-sm me-1">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-warning btn-sm me-1">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 