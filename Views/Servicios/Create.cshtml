@model Servicio
@{
    ViewData["Title"] = "Crear Servicio";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-plus-circle"></i> Crear Nuevo Servicio</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label">
                                        <i class="fas fa-tag"></i> Nombre del Servicio *
                                    </label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Limpieza Facial Profunda" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Categoria" class="form-label">
                                        <i class="fas fa-list"></i> Categoría *
                                    </label>
                                    <select asp-for="Categoria" class="form-select" asp-items="ViewBag.Categorias">
                                        <option value="">-- Seleccione una categoría --</option>
                                    </select>
                                    <span asp-validation-for="Categoria" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label">
                                        <i class="fas fa-dollar-sign"></i> Precio
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Precio" class="form-control" placeholder="0.00" step="0.01" />
                                    </div>
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">
                                <i class="fas fa-info-circle"></i> Descripción
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" 
                                      placeholder="Describe los beneficios y características de este servicio..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Imagen" class="form-label">
                                <i class="fas fa-image"></i> URL de Imagen
                            </label>
                            <input asp-for="Imagen" class="form-control" placeholder="https://ejemplo.com/imagen.jpg" />
                            <span asp-validation-for="Imagen" class="text-danger"></span>
                            <div class="form-text">URL de la imagen que representa este servicio</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Crear Servicio
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 