@model Servicio
@{
    ViewData["Title"] = "Detalles del Servicio";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-spa"></i> Detalles del Servicio</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Información principal -->
                        <div class="col-md-8">
                            <h2 class="text-primary mb-3">@Model.Nombre</h2>
                            
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-muted">
                                            <i class="fas fa-list text-primary"></i> Categoría:
                                        </label>
                                        <div class="mt-1">
                                            @if (!string.IsNullOrEmpty(Model.Categoria))
                                            {
                                                <span class="badge bg-primary fs-6">@Model.Categoria</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary fs-6">Sin categoría</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-muted">
                                            <i class="fas fa-dollar-sign text-warning"></i> Precio:
                                        </label>
                                        <div class="mt-1">
                                            @if (Model.Precio.HasValue)
                                            {
                                                <h3 class="text-warning mb-0">$@Model.Precio.Value.ToString("N2")</h3>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definido</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-muted">
                                            <i class="fas fa-key text-info"></i> ID:
                                        </label>
                                        <div class="mt-1">
                                            <code class="text-info">@Model.Id</code>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Descripcion))
                            {
                                <div class="info-item mb-4">
                                    <label class="fw-bold text-muted">
                                        <i class="fas fa-info-circle text-secondary"></i> Descripción:
                                    </label>
                                    <div class="mt-2">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <p class="mb-0">@Model.Descripcion</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Imagen del servicio -->
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.Imagen))
                            {
                                <div class="text-center">
                                    <label class="fw-bold text-muted mb-2 d-block">
                                        <i class="fas fa-image text-primary"></i> Imagen del Servicio:
                                    </label>
                                    <img src="@Model.Imagen" alt="@Model.Nombre" 
                                         class="img-fluid rounded shadow-sm" 
                                         style="max-width: 100%; max-height: 300px;"
                                         onerror="this.src='https://via.placeholder.com/300x200?text=Sin+Imagen'" />
                                </div>
                            }
                            else
                            {
                                <div class="text-center">
                                    <label class="fw-bold text-muted mb-2 d-block">
                                        <i class="fas fa-image text-muted"></i> Imagen del Servicio:
                                    </label>
                                    <div class="bg-light rounded p-4">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                        <p class="text-muted mt-2 mb-0">Sin imagen disponible</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Información adicional -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-chart-bar text-info"></i> Resumen del Servicio
                                    </h6>
                                    <div class="row text-center">
                                        <div class="col-md-4">
                                            <div class="metric">
                                                <i class="fas fa-tag fa-2x text-primary mb-2"></i>
                                                <h6 class="text-muted">Nombre</h6>
                                                <p class="fw-bold">@Model.Nombre</p>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="metric">
                                                <i class="fas fa-list fa-2x text-success mb-2"></i>
                                                <h6 class="text-muted">Categoría</h6>
                                                <p class="fw-bold">@(Model.Categoria ?? "Sin categoría")</p>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="metric">
                                                <i class="fas fa-dollar-sign fa-2x text-warning mb-2"></i>
                                                <h6 class="text-muted">Precio</h6>
                                                <p class="fw-bold">
                                                    @if (Model.Precio.HasValue)
                                                    {
                                                        <span>$@Model.Precio.Value.ToString("N2")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No definido</span>
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Acciones -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver al Listado
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit"></i> Editar Servicio
                            </a>
                            <button type="button" class="btn btn-danger" 
                                    onclick="confirmarEliminacion('@Model.Id', '@Model.Nombre')">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea eliminar el servicio <strong id="servicioNombre"></strong>?</p>
                <p class="text-danger"><small>Esta acción no se puede deshacer.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmarEliminacion(id, nombre) {
    document.getElementById('servicioNombre').textContent = nombre;
    document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + id;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script> 