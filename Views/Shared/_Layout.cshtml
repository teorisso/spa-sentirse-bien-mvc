<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Admin SPA</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="~/css/site.css" />
  <!-- Toastr para notificaciones -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>

<body style="min-height: 100vh; display: flex; flex-direction: column;">
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
          <i class="fas fa-spa me-2"></i>
          <span class="d-none d-sm-inline">SPA de Belleza - Admin</span>
          <span class="d-sm-none">SPA Admin</span>
        </a>
        @if (!(ViewContext.RouteData.Values["controller"]?.ToString() == "Cuenta" && ViewContext.RouteData.Values["action"]?.ToString() == "Login"))
        {
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home me-1"></i><span class="d-none d-md-inline">Inicio</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Servicios" asp-action="Index">
                <i class="fas fa-concierge-bell me-1"></i><span class="d-none d-md-inline">Servicios</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Profesionales" asp-action="Index">
                <i class="fas fa-user-md me-1"></i><span class="d-none d-md-inline">Profesionales</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                <i class="fas fa-users me-1"></i><span class="d-none d-md-inline">Clientes</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Turnos" asp-action="Index">
                <i class="fas fa-calendar-alt me-1"></i><span class="d-none d-md-inline">Turnos</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Cuenta" asp-action="Logout">
                <i class="fas fa-sign-out-alt me-1"></i><span class="d-none d-md-inline">Cerrar Sesión</span>
              </a>
            </li>
          </ul>
        </div>
        }
      </div>
    </nav>
  </header>

  <main role="main" class="container mt-4 flex-grow-1">
    <!-- Mensajes de notificación -->
    @if (TempData["SuccessMessage"] != null)
    {
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }
    @if (TempData["WarningMessage"] != null)
    {
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }
    @if (TempData["InfoMessage"] != null)
    {
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }

    @RenderBody()
  </main>
  <footer class="footer bg-light text-center py-3 border-top mt-auto" style="margin-top:0;">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <span class="text-muted">&copy; @DateTime.Now.Year - SPA de Belleza</span>
        </div>
        <div class="col-md-6">
          <span class="text-muted">
            <i class="fas fa-code me-1"></i>Desarrollado con ASP.NET Core
          </span>
        </div>
      </div>
    </div>
  </footer>

  @RenderSection("Scripts", required: false)
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script src="~/js/site.js"></script>

  <script>
    // Configurar Toastr
    toastr.options = {
      "closeButton": true,
      "progressBar": true,
      "positionClass": "toast-top-right",
      "timeOut": "5000"
    };

    // Auto-hide alerts after 5 seconds
    $(document).ready(function () {
      setTimeout(function () {
        $('.alert').fadeOut('slow');
      }, 5000);
    });
  </script>
</body>

</html>
