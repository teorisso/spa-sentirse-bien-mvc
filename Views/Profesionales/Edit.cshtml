@model SpaAdmin.Controllers.EditProfesionalDto
@{
    ViewData["Title"] = "Editar Profesional";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            
            @* Mostrar mensajes de éxito o error *@
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-user-edit"></i> Editar Profesional</h4>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
                <div class="card-body">
                    
                    <form asp-action="Edit" method="post">
                        @Html.HiddenFor(m => m.Id)
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">
                                        <i class="fas fa-user"></i> @Html.DisplayNameFor(m => m.FirstName)
                                    </label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Ingrese el nombre">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label">
                                        <i class="fas fa-user"></i> @Html.DisplayNameFor(m => m.LastName)
                                    </label>
                                    <input asp-for="LastName" class="form-control" placeholder="Ingrese el apellido">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">
                                        <i class="fas fa-envelope"></i> @Html.DisplayNameFor(m => m.Email)
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="profesional@spa.com">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Role" class="form-label">
                                        <i class="fas fa-user-tag"></i> @Html.DisplayNameFor(m => m.Role)
                                    </label>
                                    <select asp-for="Role" class="form-select">
                                        <option value="profesional">Profesional</option>
                                        <option value="cliente">Cliente</option>
                                        <option value="admin">Administrador</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i>
                                    <strong>Nota:</strong> Al cambiar el email, asegúrese de que no esté siendo utilizado por otro usuario.
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <div>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="fas fa-eye"></i> Ver Detalles
                                </a>
                            </div>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="mt-3">
                <div class="card border-0 bg-light">
                    <div class="card-body">
                        <h6 class="card-title text-muted">
                            <i class="fas fa-lightbulb"></i> Consejos:
                        </h6>
                        <ul class="list-unstyled mb-0 small text-muted">
                            <li><i class="fas fa-chevron-right text-primary"></i> Verifique que todos los datos sean correctos antes de guardar</li>
                            <li><i class="fas fa-chevron-right text-primary"></i> El cambio de rol afectará los permisos del usuario</li>
                            <li><i class="fas fa-chevron-right text-primary"></i> El email debe ser único en el sistema</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 