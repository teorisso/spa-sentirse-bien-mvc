@model SpaAdmin.Models.Profesional
@{
    ViewData["Title"] = "Nuevo Profesional";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus"></i> Nuevo Profesional</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="NombreCompleto" class="form-label fw-bold"></label>
                            <input asp-for="NombreCompleto" class="form-control" placeholder="Ej: María López" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Especialidad" class="form-label fw-bold"></label>
                            <input asp-for="Especialidad" class="form-control" placeholder="Ej: Masajes" />
                            <span asp-validation-for="Especialidad" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="Ej: maria@spa.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 